<Window x:Class="Libton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Libton"
        mc:Ignorable="d"
        Title="Libton" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <Image x:Key="SearchIcon" Source="/Resources/SearchIcon.png"/>
    </Window.Resources>
    <Grid>
        <DataGrid x:Name="LibTable"
                  SelectionChanged="DataGrid_SelectionChanged" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn IsReadOnly="False" 
                                        Binding="{Binding Path=IsRead}"
                                        Header="Is read" 
                                        Width="50"/>

                <DataGridTextColumn Binding="{Binding Path=DateTime}"
                                    IsReadOnly="True" 
                                    Header="Time"
                                    Width="150"/>

                <DataGridTextColumn Binding="{Binding Path=BookName}" 
                                    IsReadOnly="True"
                                    Header="Name" 
                                    Width="*"/>

                <DataGridTemplateColumn Header="Delete" 
                                        Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="DeleteButton_Click" 
                                    Content="Delete"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>